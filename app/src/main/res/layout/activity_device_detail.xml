<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="thesis.com.swiftletpro.DeviceDetailActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_opacity_72px"
        app:layout_marginTopPercent="3%"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:tint="@color/colorPrimary"
        />

    <TextView
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        android:id="@+id/humidity_value_txt"
        android:textColor="@color/colorPrimary"
        android:textSize="42dp"
        />

    <TextView
        android:text="Saturday, 31 December 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity_value_txt"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        android:id="@+id/date_value_txt"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        />
    <TextView
        android:text="Swiftlet Pro Sense E001H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_value_txt"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        android:id="@+id/device_value_txt"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        app:layout_marginTopPercent="50%"
        app:layout_heightPercent="50%" />

</android.support.percent.PercentRelativeLayout>
